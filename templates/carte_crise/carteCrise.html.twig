{% extends 'template.html.twig' %}

{% block title %} Controller | Cartes Grises {% endblock %}

{% block body %}


  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Liste des Cartes Grises</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Cartes Grises</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- /.row -->
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Liste des Cartes Grise</h3>

                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                  <thead>
                    <tr>
                      <th>Num Plaque</th>
                      <th>Noms</th>
                      <th>Adresse</th>
                      <th>Num Impot</th>
                      <th>Date Mise en circulation</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for carteCrise in carteCrises %}
                      <tr>
                        <td>{{ carteCrise.numPlaque }}</td>
                        <td>{{ carteCrise.noms }}</td>
                        <td>{{ carteCrise.adresse }}</td>
                        <td><span class="tag tag-success">{{ carteCrise.numImpot }}</span></td>
                        <td>{{ carteCrise.dateMiseCirculation|date('d/m/Y') }}</td>
                        <td>
                          <div class="row">
                            <div class="col-4">
                              <a href="{{ path('detailCarteGrise', {id:carteCrise.id}) }}" class="btn btn-block btn-outline-success">Voir</a>
                            </div>
                            <div class="col-4">
                              <a href="{{ path('editerCarteGrise', {id: carteCrise.id}) }}" class="btn btn-block btn-outline-info">Modif</a>
                            </div>
                            <div class="col-4">
                              <a href="{{ path('deleteCarteCrise', {id: carteCrise.id}) }}" class="btn btn-block btn-outline-danger">Suppr</a>
                            </div>
                          </div>
                        </td>
                      </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <div class="col-2">
            <a href="{{ path('editerCarteGrise') }}" class="btn btn-block btn-primary">Ajouter</a>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
 
  {% endblock %}