{% extends 'template.html.twig' %}

{% block title %} Controller | Detail Carte Grise {% endblock %}

{% block body %}

<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Carte Grise Detail</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Carte Grise</a></li>
              <li class="breadcrumb-item active">Carte Grise Detail</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Carte Grise Detail</h3>

          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
              <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
              <i class="fas fa-times"></i>
            </button>
          </div>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-12 col-md-12 col-lg-8 order-2 order-md-1">
              <div class="row">
                <div class="col-12 col-sm-4">
                  <div class="info-box bg-light">
                    <div class="info-box-content">
                      <span class="info-box-text text-center text-muted">Plaque</span>
                      <span class="info-box-number text-center text-muted mb-0">{{ carteCrise.numplaque }}</span>
                    </div>
                  </div>
                </div>
                <div class="col-12 col-sm-4">
                  <div class="info-box bg-light">
                    <div class="info-box-content">
                      <span class="info-box-text text-center text-muted">Tpe Usage</span>
                      <span class="info-box-number text-center text-muted mb-0">{{ carteCrise.typeUsage }}</span>
                    </div>
                  </div>
                </div>
                <div class="col-12 col-sm-4">
                  <div class="info-box bg-light">
                    <div class="info-box-content">
                      <span class="info-box-text text-center text-muted">Num Impot</span>
                      <span class="info-box-number text-center text-muted mb-0">{{ carteCrise.numImpot }}</span>
                    </div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-6">
                  <h4>Details de la Carte Grise</h4>
                    <div class="post">
                      <div class="user-block">
                        <span class="username">
                          <a href="#">{{ carteCrise.noms }}</a>
                        </span>
                      </div>
                      <!-- /.user-block -->
                      <div class="row">
                        <div class="col-6">
                            <p>
                                <p>Noms du proprietaire : {{ carteCrise.noms }}</p>
                                <p>Adresse : {{ carteCrise.adresse }}</p>
                                <p>Numéro Impot : {{ carteCrise.numImpot }}</p>
                                <p>Date de la mise en circulation : {{ carteCrise.dateMiseCirculation|date('d/m/Y') }}</p>
                                <p>Type d'usage : {{ carteCrise.typeUsage }}</p>
                                <p>Date de la délivrance : {{ carteCrise.dateDelivrance|date('d/m/Y') }}</p>
                            </p>
                        </div>
                      </div>
                    </div>
                </div>
              </div>
            </div>
            <div class="col-12 col-md-12 col-lg-4 order-1 order-md-2">
              <h3 class="text-primary"><i class="fas fa-paint-brush"></i> {{ carteCrise.noms }}</h3>
              <br>
              <div class="text-muted">
                <p class="text-sm">Num impot
                  <b class="d-block">{{ carteCrise.numImpot }}</b>
                </p>
                <p class="text-sm">Type d'usage
                  <b class="d-block">{{ carteCrise.typeUsage }}</b>
                </p>
                <p class="text-sm">Adresse
                  <b class="d-block">{{ carteCrise.adresse }}</b>
                </p>
              </div>
            </div>
          </div>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->



  {% endblock %}