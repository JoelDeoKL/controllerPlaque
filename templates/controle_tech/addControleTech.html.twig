 {% extends 'template.html.twig' %}

{% block title %} Controller | Controlle Technique {% endblock %}

{% block body %}
 
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Formulaire d'ajout de Controlle Technique</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Formulaire</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Ajouter Un controlle</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              {{ form_start(form) }}
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                {{ form_label(form.numPlaque) }}
                                {{ form_widget(form.numPlaque, {'attr': {
                                    'class':'required form-control',
                                    'placeholder' : 'Entrez le numero de la plaque'
                                }}) }}
                                
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                {{ form_label(form.marque) }}
                                {{ form_widget(form.marque, {'attr': {
                                    'class':'required form-control',
                                    'placeholder' : 'Entrez la marque'
                                }}) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                {{ form_label(form.type) }}
                                {{ form_widget(form.type, {'attr': {
                                    'class':'required form-control',
                                    'placeholder' : 'Entrez le type'
                                }}) }}
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                {{ form_label(form.modele) }}
                                {{ form_widget(form.modele, {'attr': {
                                    'class':'required form-control',
                                    'placeholder' : 'Entrez votre le modele'
                                }}) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                {{ form_label(form.miseCirculation) }}
                                {{ form_widget(form.miseCirculation, {'attr': {
                                    'class':'required form-control',
                                    'placeholder' : 'Entrez la mise en circulation'
                                }}) }}
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                {{ form_label(form.numChassis) }}
                                {{ form_widget(form.numChassis, {'attr': {
                                    'class':'required form-control',
                                    'placeholder' : 'Entrez le num√©ro de la chassis'
                                }}) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                {{ form_label(form.date_delivrance) }}
                                {{ form_widget(form.date_delivrance, {'attr': {
                                    'class':'required form-control',
                                    'placeholder' : 'Entrez la date'
                                }}) }}
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                {{ form_label(form.date_expiration) }}
                                {{ form_widget(form.date_expiration, {'attr': {
                                    'class':'required form-control',
                                    'placeholder' : 'Entrez le daate'
                                }}) }}
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.card-body -->

                <div class="card-footer"> 
                    {{ form_widget(form.editer, {'attr': {'class':'btn btn-primary'}}) }}
                </div>
              
            </div>
            <!-- /.card -->

          </div>
          <!--/.col (right) -->
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  
{% endblock %}