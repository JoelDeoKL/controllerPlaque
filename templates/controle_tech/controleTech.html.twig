{% extends 'template.html.twig' %}

{% block title %} Controller | Assurances {% endblock %}

{% block body %}


  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Liste des Assurances</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Assurances</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- /.row -->
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Liste des assurances</h3>

                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                  <thead>
                    <tr>
                      <th>Num Plaque</th>
                      <th>Num Agr√©ement</th>
                      <th>Num Police</th>
                      <th>Marque</th>
                      <th>TTR</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for assurance in assurances %}
                      <tr>
                        <td>{{ assurance.numPlaque }}</td>
                        <td>{{ assurance.numAgreement }}</td>
                        <td>{{ assurance.numPolice }}</td>
                        <td><span class="tag tag-success">{{ assurance.marque }}</span></td>
                        <td>{{ assurance.ttr }}</td>
                        <td>
                          <div class="row">
                            <div class="col-4">
                              <a href="{{ path('detailAssurance', {id:assurance.id}) }}" class="btn btn-block btn-outline-success">Voir</a>
                            </div>
                            <div class="col-4">
                              <a href="{{ path('editerAssurance', {id: assurance.id}) }}" class="btn btn-block btn-outline-info">Modif</a>
                            </div>
                            <div class="col-4">
                              <a href="{{ path('deleteAssurance', {id: assurance.id}) }}" class="btn btn-block btn-outline-danger">Suppr</a>
                            </div>
                          </div>
                        </td>
                      </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <div class="col-2">
            <a href="{{ path('editerAssurance') }}" class="btn btn-block btn-primary">Ajouter</a>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
 
  {% endblock %}