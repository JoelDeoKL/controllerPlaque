{% extends 'template.html.twig' %}

{% block title %} Controller | Detail Controle Technique {% endblock %}

{% block body %}

<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Controle Technique Detail</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Controle Technique</a></li>
              <li class="breadcrumb-item active">Controle Technique Detail</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Controle Technique Detail</h3>

          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
              <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
              <i class="fas fa-times"></i>
            </button>
          </div>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-12 col-md-12 col-lg-8 order-2 order-md-1">
              <div class="row">
                <div class="col-12 col-sm-4">
                  <div class="info-box bg-light">
                    <div class="info-box-content">
                      <span class="info-box-text text-center text-muted">Plaque</span>
                      <span class="info-box-number text-center text-muted mb-0">{{ controleTech.numplaque }}</span>
                    </div>
                  </div>
                </div>
                <div class="col-12 col-sm-4">
                  <div class="info-box bg-light">
                    <div class="info-box-content">
                      <span class="info-box-text text-center text-muted">Marque</span>
                      <span class="info-box-number text-center text-muted mb-0">{{ controleTech.marque }}</span>
                    </div>
                  </div>
                </div>
                <div class="col-12 col-sm-4">
                  <div class="info-box bg-light">
                    <div class="info-box-content">
                      <span class="info-box-text text-center text-muted">Type</span>
                      <span class="info-box-number text-center text-muted mb-0">{{ controleTech.type }}</span>
                    </div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-6">
                  <h4>Details de l'Controle Technique</h4>
                    <div class="post">
                      <div class="user-block">
                        <span class="username">
                          <a href="#">{{ controleTech.marque }} {{ controleTech.modele }}</a>
                        </span>
                        <span class="description">{{ controleTech.type }}</span>
                      </div>
                      <!-- /.user-block -->
                      <div class="row">
                        <div class="col-6">
                            <p>
                                <p>Marque du véhicule : {{ controleTech.marque }}</p>
                                <p>Modèle du véhicule : {{ controleTech.modele }}</p>
                                <p>Mise en circulation : {{ controleTech.miseCirculation }}</p>
                                <p>Numéro de la plaque : {{ controleTech.numPlaque }}</p>
                                <p>Numéro de la Chassis : {{ controleTech.chassis }}</p>
                                <p>Date de délivrance : {{ controleTech.dateDelivrance|date('d/m/Y') }}</p>
                                <p>Date d'expiration : {{ controleTech.dateExpiraion|date('d/m/Y') }}</p> 
                            </p>
                        </div>
                      </div>
                    </div>
                </div>
              </div>
            </div>
            <div class="col-12 col-md-12 col-lg-4 order-1 order-md-2">
              <h3 class="text-primary"><i class="fas fa-paint-brush"></i> {{ controleTech.marque }} {{ controleTech.modele }}</h3>
              <p class="text-muted">{{ controleTech.marque }} {{ controleTech.type }}</p>
              <br>
              <div class="text-muted">
                <p class="text-sm">Num agréement
                  <b class="d-block">{{ controleTech.numAgreement }}</b>
                </p>
                <p class="text-sm">TTR
                  <b class="d-block">{{ controleTech.ttr }}</b>
                </p>
                <p class="text-sm">Num Police
                  <b class="d-block">{{ controleTech.numPolice }}</b>
                </p>
                <p class="text-sm">Chassis
                  <b class="d-block">{{ controleTech.chassis }}</b>
                </p>
              </div>
            </div>
          </div>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->



  {% endblock %}