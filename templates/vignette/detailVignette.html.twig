{% extends 'template.html.twig' %}

{% block title %} Controller | Detail Detendeur {% endblock %}

{% block body %}

<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Vignette Detail</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Vignette</a></li>
              <li class="breadcrumb-item active">Vignette Detail</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Vignette Detail</h3>

          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
              <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
              <i class="fas fa-times"></i>
            </button>
          </div>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-12 col-md-12 col-lg-8 order-2 order-md-1">
              <div class="row">
                <div class="col-12 col-sm-4">
                  <div class="info-box bg-light">
                    <div class="info-box-content">
                      <span class="info-box-text text-center text-muted">Plaque</span>
                      <span class="info-box-number text-center text-muted mb-0">{{ vignette.numPlaque }}</span>
                    </div>
                  </div>
                </div>
                <div class="col-12 col-sm-4">
                  <div class="info-box bg-light">
                    <div class="info-box-content">
                      <span class="info-box-text text-center text-muted">Marque</span>
                      <span class="info-box-number text-center text-muted mb-0">{{ vignette.marque }}</span>
                    </div>
                  </div>
                </div>
                <div class="col-12 col-sm-4">
                  <div class="info-box bg-light">
                    <div class="info-box-content">
                      <span class="info-box-text text-center text-muted">Catégorie</span>
                      <span class="info-box-number text-center text-muted mb-0">{{ vignette.type }}</span>
                    </div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-6">
                  <h4>Détails de la Vignette</h4>
                    <div class="post">
                      <div class="user-block">
                        <span class="username">
                          <a href="#">{{ vignette.marque }}</a>
                        </span>
                        <span class="description">{{ vignette.type }}</span>
                      </div>
                      <!-- /.user-block -->
                      <div class="row">
                        <div class="col-12">
                          <p>
                              <p>Num Plaque : {{ vignette.numPlaque }}</p>
                              <p>Code : {{ vignette.code }}</p>
                              <p>Marque : {{ vignette.marque }}</p>
                              <p>Type : {{ vignette.type }}</p>
                              <p>Montant Impot : {{ vignette.montantImpot }}</p>
                              <p>Date d'expiration : {{ vignette.dateExpiration|date('d/m/Y') }}</p>
                              <p>Taxe : {{ vignette.taxe }}</p>
                              <p>Réference : {{ vignette.reference }}</p>
                          </p>
                      </div>
                    </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->



  {% endblock %}