{% extends 'template.html.twig' %}

{% block title %} Controller | Vignettes {% endblock %}

{% block body %}


  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Liste des Vignettes</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Vignettes</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- /.row -->
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Liste des vignettes</h3>

                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                  <thead>
                    <tr>
                      <th>Code</th>
                      <th>Num Plaque</th>
                      <th>Marque</th>
                      <th>Type</th>
                      <th>Montant Impot</th>
                      <th>Montant Taxe</th>
                      <th>Reference</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for vignette in vignettes %}
                      <tr>
                        <td>{{ vignette.code }} </td>
                        <td>{{ vignette.numPlaque }}</td>
                        <td>{{ vignette.marque }}</td>
                        <td><span class="tag tag-success">{{ vignette.type }}</span></td>
                        <td>{{ vignette.montantImpot }}</td>
                        <td>{{ vignette.taxe }}</td>
                        <td>{{ vignette.reference }}</td>
                        <td>
                          <div class="row">
                            <div class="col-4">
                              <a href="{{ path('detailVignette', {id:vignette.id}) }}" class="btn btn-block btn-outline-success">Voir</a>
                            </div>
                            <div class="col-4">
                              <a href="{{ path('editerVignette', {id: vignette.id}) }}" class="btn btn-block btn-outline-info">Modif</a>
                            </div>
                            <div class="col-4">
                              <a href="{{ path('deleteVignette', {id: vignette.id}) }}" class="btn btn-block btn-outline-danger">Suppr</a>
                            </div>
                          </div>
                        </td>
                      </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <div class="col-2">
            <a href="{{ path('editerVignette') }}" class="btn btn-block btn-dark">Ajouter</a>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
 
  {% endblock %}